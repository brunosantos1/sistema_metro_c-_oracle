@model PM.WebServices.Models.SistemaEmpresa

@{
    ViewBag.Title = "Empresas/Agrupamento";
}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>@ViewBag.Title<small></small></h2>
            <div class="clearfix"></div>
        </div>        
        <div class="x_content">
            @using (Html.BeginForm("add", "Empresa", new { id = ((Model == null) ? 0 : Model.IdEmpresa) }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
            <div class="">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group col-md-10 col-sm-10">
                    @Html.LabelFor(model => model.DsDescricao, htmlAttributes: new { @class = "control-label " })
                    @Html.EditorFor(model => model.DsDescricao, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="col-md-10">
                        @Html.ValidationMessageFor(model => model.DsDescricao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-2 col-sm-2">
                    @Html.LabelFor(model => model.IsAtivo, htmlAttributes: new { @class = "control-label " })
                    @Html.DropDownListFor(model => model.IsAtivo, new SelectList(PM.LogAndAlert.Library.Helper.IsAtivo(), "Key", "Value"), "** SELECIONE **", new { @class = "form-control" })
                    <div class="col-md-10">
                        @Html.ValidationMessageFor(model => model.IsAtivo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12 col-sm-12">
                        <div class="text-right">
                            @Html.ActionLink("Cancelar", "index", new { controller = "Empresa" }, new { @class = "btn btn-default btn-xs" })
                            @if (Model != null) { Html.ActionLink("Excluir ?", "excluir", new { controller = "Empresa", id = Model.IdEmpresa }, new { @class = "btn btn-danger btn-xs" }); }
                            <input type="submit" value="Salvar" class="btn btn-success btn-xs" />
                        </div>
                    </div>
                </div>
            </div>
            }


        </div>
    </div>
</div>
