@*@model IEnumerable<PM.LogAndAlert.Models.SysAplicacaoLog>*@
@model PM.LogAndAlert.Models.SysAplicacaoLog
@{
    Layout = null;
    ViewBag.Title = "Aplicação :: Tipo Log";
}
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header bg-blue-sky">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">@ViewBag.Title</h4>
        </div>

        @using (Html.BeginForm("savelog", "sysAplicacao", FormMethod.Post))
        {


        <div class="modal-body">
            <div class="row">
                <div class="container">
                    <div class="form-group col-md-10">
                        @Html.LabelFor(model => model._idtipolog, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model._idtipolog, (IEnumerable<SelectListItem>)ViewBag.tipolog, new { @class = "form-control" })
                        <div class="col-md-12">
                            @Html.ValidationMessageFor(model => model._idtipolog, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-md-2 text-center">
                        <br />
                        @Html.ActionLink("Adicionar", "addApplicationLog", new { controller = "SysAplicacao" }, new { @class = "btn btn-primary btn-lg" })
                    </div>
                </div>
            </div>

            @if (ViewBag.tipolog == null)
            {
                <table id="Tabela1" class="table table-striped table-bordered dt-responsive nowrap datatable-responsive" cellspacing="0" width="100%">
                    <thead>

                        <tr nowrap>
                            <th nowrap class="col-md-5" data-original-title="Tipo de log a ser gerenciado nesta aplicacao" data-toggle="tooltip" data-placement="bottom" title="">Tipo Log</th>
                            <th nowrap class="col-md-6" data-original-title="Assinatura a ser chamada dentro da aplicação para registro do log" data-toggle="tooltip" data-placement="bottom" title="">Assinatura</th>
                            <th nowrap class="col-md-1 text-center" data-original-title="Ações pertinentes ao registro" data-toggle="tooltip" data-placement="bottom" title="">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.tipolog)
                        {
                            <tr>
                                <td>@item._text</td>
                                <td>@item._assitatura</td>
                                <td class="text-center">
                                    @Html.ActionLink("Remover", "Delete", new { controller = "SysAplicacao", id = item._value }, new { @class = "btn btn-primary btn-xs" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }


        </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-default btn-xs" data-dismiss="modal">Cancelar</button>
                <input type="submit" value="Salvar" class="btn btn-success btn-xs" />
            </div>


            }


        </div>
</div>
