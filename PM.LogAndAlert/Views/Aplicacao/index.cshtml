@model IEnumerable<PM.WebServices.Models.SistemaAplicacao>
@{
                /**/

                /**/

                ViewBag.Title = "Aplicações";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>@ViewBag.Title<small></small></h2>
            <div class="clearfix"></div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="form-group col-md-12">
                        <label class="control-label">Empresa</label>
                        @Html.DropDownList("ddlIdEmpresa", (IEnumerable<SelectListItem>)ViewBag.EmpresaId, null, new { @class = "form-control", @onchange = "fnCarregaDataTable_Aplicacao(this, 'tbAplicacao');" })
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="col-md-12 col-sm-12">
                        <div class="text-right">
                            @Html.ActionLink("Novo Registro", "add", new { controller = "Aplicacao" }, new { @class = "btn btn-primary btn-xs" })
                        </div>
                    </div>

                    <table id="tbAplicacao" class="table table-striped table-bordered dt-responsive nowrap datatable-responsive" cellspacing="0" style="width: 100%">
                        <thead>

                            <tr nowrap>
                                @*<th nowrap class="col-md-3 ">Empresa</th>*@
                                <th nowrap class="col-md-5 ">Aplicações</th>
                                <th nowrap class="col-md-1 text-center">Servidor</th>
                                <th nowrap class="col-md-1 text-center">Banco</th>
                                <th nowrap class="col-md-1 text-center">Protocolo</th>
                                <th nowrap class="col-md-1 text-center">Nº Tipo Logs</th>
                                <th nowrap class="col-md-1 text-center">Situação</th>
                                <th nowrap class="col-md-2 text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/Aplicacao");
}
