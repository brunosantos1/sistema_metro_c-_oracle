                        <td nowrap>Data Solicitado</td>
                        <td nowrap>Hora Solicitado</td>
                        <td nowrap>Prevista Liberação</td>
                        <td nowrap>Data Liberado</td>
                        <td nowrap>Data Cancelamento</td>
                        <td nowrap>Responsável</td>
                        <td nowrap>Status da Programação</td>
                        <td nowrap>Ação</td>

                    </tr>
                </thead>
                <tbody>
                    @for (int x = 0; x <= 10; x++)
                    {
