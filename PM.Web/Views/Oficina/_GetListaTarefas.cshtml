@model PM.Web.ViewModel.NotaOCOPOLViewModel

<div class="row">
    <div class="col-md">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table custom">
                <thead>
                    <tr>
                        <th style="width: 10%;" class="center2">@Html.DisplayNameFor(model => model.GridListaTarefas[0].Selecionar)</th>
                        <th>@Html.DisplayNameFor(model => model.GridListaTarefas[0].cd_gp_lt_tarefa)</th>
                        <th>@Html.DisplayNameFor(model => model.GridListaTarefas[0].cd_sap)</th>
                        <th>@Html.DisplayNameFor(model => model.GridListaTarefas[0].ds_lt_tarefa)</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @for (int ii = 0; ii < Model.GridListaTarefas.Count; ii++)
                    {
                        <tr class="gradeX">
                            <td>
                                @Html.CheckBoxFor(model => Model.GridListaTarefas[ii].Selecionar, new { id = "chkSelecionar_" + ii, value = Model.GridListaTarefas[ii].id_lt_tarefa, onchange = "lista_tarefa_change(this)" })
                                @Html.HiddenFor(modelItem => Model.GridListaTarefas[ii].id_lt_tarefa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.GridListaTarefas[ii].cd_gp_lt_tarefa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.GridListaTarefas[ii].cd_sap)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.GridListaTarefas[ii].ds_lt_tarefa)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
