@{
    Layout = null;
}

<div class="modal fade" id="modalEmpregados" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Selecione um empregado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="form-group col-md">
                        <p>Nome ou RG do empregado</p>
                        <div class="input-group mb">
                            <input id="txtEmpregadosEntrada" class="form-control" type="text" value="" />
                            <div class="input-group-append">
                                <button id="btnPesquisarEmpregados" class="btn btn-outline-secondary" type="button"><i class="material-icons">search</i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <table id="tblEmpregados" class="table table-bordered clickable">
                    <caption>Empregados</caption>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>RG</th>
                            <th>Nome</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="btnLimparEmpregado" >Limpar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>